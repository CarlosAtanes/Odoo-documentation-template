<odoo>
    <data>
        <record id="view_amazon_connector_form" model="ir.ui.view">
            <field name="name">amazon.connector.view.form</field>
            <field name="model">amazon.connector.view</field>
            <field name="arch" type="xml">
                <form string="Amazon Connector View">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="asin" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="fetch_product_details" string="Fetch Product Details" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
