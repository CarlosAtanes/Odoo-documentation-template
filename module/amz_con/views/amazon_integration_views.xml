<odoo>
    <record id="view_amazon_product_tree" model="ir.ui.view">
        <field name="name">amazon.product.tree</field>
        <field name="model">amazon.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="amazon_id"/>
                <field name="price"/>
                <field name="stock"/>
            </tree>
        </field>
    </record>

    <record id="view_amazon_product_form" model="ir.ui.view">
        <field name="name">amazon.product.form</field>
        <field name="model">amazon.product</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="amazon_id"/>
                    <field name="description"/>
                    <field name="price"/>
                    <field name="stock"/>
                </group>
            </form>
        </field>
    </record>

    <menuitem id="menu_amazon_integration" name="Amazon Integration" sequence="1"/>

    <menuitem id="menu_amazon_products" name="Amazon Products" parent="menu_amazon_integration" action="action_amazon_products"/>
</odoo>
