<odoo>
    <record id="view_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Library Book">
                <group>
                    <field name="name"/>
                    <field name="author"/>
                    <field name="published_date"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree string="Library Book">
                <field name="name"/>
                <field name="author"/>
                <field name="published_date"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_library_management" name="Library Management"/>
    
    <menuitem id="menu_library_books" name="Books" parent="menu_library_management" sequence="10"/>

    <record id="action_books" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_action_books" name="Books" parent="menu_library_books" action="action_books"/>
</odoo>
