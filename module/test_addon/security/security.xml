<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Definición de grupos de seguridad -->
    <record id="group_test_addon_user" model="res.groups">
        <field name="name">Test Addon User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Definición de reglas de acceso -->
    <record id="access_test_addon_model" model="ir.model.access">
        <field name="name">access_test_addon_model</field>
        <field name="model_id" ref="model_test_addon"/>
        <field name="group_id" ref="group_test_addon_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>
